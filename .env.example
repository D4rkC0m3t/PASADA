# ================================================
# PASADA CRM - Environment Variables Template
# ================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# ================================================
# SUPABASE CONFIGURATION
# ================================================
# Get these from: Supabase Dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ================================================
# DATABASE (For migrations and direct access)
# ================================================
# Get from: Supabase Dashboard → Project Settings → Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# ================================================
# APPLICATION SETTINGS
# ================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PASADA CRM
NODE_ENV=development

# ================================================
# EMAIL SERVICE - RESEND (Transactional/Automated)
# ================================================
# Sign up at: https://resend.com
# Use for: OTPs, invoices, automated reminders
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL="PASADA Interiors <quotations@pasada.in>"
EMAIL_FROM=noreply@pasada.in
EMAIL_FROM_NAME=PASADA Interior Design

# ================================================
# EMAIL SERVICE - ZOHO SMTP (Manual Support/Sales)
# ================================================
# Configure at: Zoho Mail → Settings → SMTP
# Use for: Manual support replies, sales follow-ups
SMTP_HOST=smtp.zoho.in
SMTP_PORT=465                           # 465 for SSL, 587 for TLS
SMTP_SECURE=true                        # true for SSL, false for TLS
SMTP_USER=support@pasada.in             # Your Zoho email
SMTP_PASSWORD=your-app-password-here    # Generate app password in Zoho
SMTP_FROM_NAME=PASADA Support

# Additional SMTP accounts (optional)
SMTP_SALES_USER=sales@pasada.in
SMTP_SALES_PASSWORD=your-app-password-here
SMTP_NOREPLY_USER=noreply@pasada.in
SMTP_NOREPLY_PASSWORD=your-app-password-here

# ================================================
# PDF GENERATION
# ================================================
# PDF library will use environment variables for optimization
PDF_GENERATION_MODE=puppeteer  # Options: puppeteer, pdf-lib
PDF_QUALITY=high               # Options: high, medium, low

# ================================================
# FILE UPLOAD LIMITS
# ================================================
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,webp

# ================================================
# ANALYTICS (Optional)
# ================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (auto-enabled on Vercel)
# No configuration needed

# ================================================
# MONITORING & ERROR TRACKING (Optional)
# ================================================
# Sentry
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ================================================
# FEATURE FLAGS
# ================================================
NEXT_PUBLIC_ENABLE_PDF_DOWNLOAD=true
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_CLIENT_PORTAL=true
NEXT_PUBLIC_ENABLE_BOOKINGS=true

# ================================================
# SECURITY
# ================================================
# Encryption key for PII data (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-32-byte-random-encryption-key-here

# NextAuth Secret (if using NextAuth for additional auth)
NEXTAUTH_SECRET=your-random-secret-string-here
NEXTAUTH_URL=http://localhost:3000

# Payment gateway webhook signature keys
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ================================================
# RATE LIMITING
# ================================================
RATE_LIMIT_WINDOW_MS=60000     # 1 minute
RATE_LIMIT_MAX_REQUESTS=100    # 100 requests per minute

# ================================================
# WEBHOOK SECRETS (Optional)
# ================================================
# For receiving webhooks from payment gateways, etc.
WEBHOOK_SECRET=your-webhook-secret

# ================================================
# SOCIAL MEDIA & SEO
# ================================================
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/pasada
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/pasada
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/pasada
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/pasada

# ================================================
# COMPANY INFORMATION
# ================================================
NEXT_PUBLIC_COMPANY_NAME=PASADA Interior Design
NEXT_PUBLIC_COMPANY_EMAIL=support@pasada.in
NEXT_PUBLIC_COMPANY_PHONE=+91 XXXXX XXXXX
NEXT_PUBLIC_COMPANY_ADDRESS=Your Address, City, State, PIN

# Team Email Addresses
NEXT_PUBLIC_SUPPORT_EMAIL=support@pasada.in
NEXT_PUBLIC_SALES_EMAIL=musaavir.ahmed@pasada.in
NEXT_PUBLIC_ADMIN_EMAIL=arjun.neo@pasada.in

# ================================================
# DEVELOPMENT SETTINGS
# ================================================
# Enable verbose logging
DEBUG=false
LOG_LEVEL=info  # Options: error, warn, info, debug

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1
